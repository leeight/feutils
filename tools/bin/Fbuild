#!/usr/bin/env bash
base_dir=$(dirname "$0")

# Use the batch file as an entry point if on cygwin.
if [ "${OSTYPE}" = "cygwin" -a "${TERM}" != "xterm" ]; then
   ${base_dir}/Fbuild.bat "$@"
   exit
fi

[ -f "Fbuild.js" ] && {
  exec node "Fbuild.js" "$@"
} || {
  echo "Can't find Fbuild.js in current directory"
}
